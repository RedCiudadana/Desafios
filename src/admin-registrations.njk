---
permalink: /admin/registrations/
---
{% extends "src/base.njk" %}

{% block head %}
<title>Admin - Registros de Desafíos</title>
<style>
    .admin-container {
        max-width: 1400px;
        margin: 50px auto;
        padding: 20px;
    }
    .admin-header {
        background: linear-gradient(135deg, #123e61 0%, #39A4DC 100%);
        color: white;
        padding: 30px;
        border-radius: 10px;
        margin-bottom: 30px;
    }
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }
    .stat-card {
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        text-align: center;
    }
    .stat-number {
        font-size: 36px;
        font-weight: bold;
        color: #39A4DC;
    }
    .stat-label {
        color: #666;
        margin-top: 10px;
    }
    .registrations-table {
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        overflow: hidden;
    }
    .table-header {
        background: #f8f9fa;
        padding: 20px;
        border-bottom: 2px solid #dee2e6;
    }
    .filters {
        display: flex;
        gap: 15px;
        margin-top: 15px;
        flex-wrap: wrap;
    }
    .filters select, .filters input {
        padding: 8px 12px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }
    table {
        width: 100%;
    }
    th {
        background: #123e61;
        color: white;
        padding: 12px;
        text-align: left;
    }
    td {
        padding: 12px;
        border-bottom: 1px solid #eee;
    }
    tr:hover {
        background: #f8f9fa;
    }
    .badge {
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 12px;
    }
    .badge-primary {
        background: #39A4DC;
        color: white;
    }
    .loading {
        text-align: center;
        padding: 50px;
    }
</style>
{% endblock %}

{% block content %}
<div class="admin-container">
    <div class="admin-header">
        <h1><i class="fa-solid fa-chart-line"></i> Panel de Administración</h1>
        <p>Gestión de registros de desafíos ciudadanos</p>
    </div>

    <div class="stats-grid" id="stats-grid">
        <div class="stat-card">
            <div class="stat-number" id="total-registrations">-</div>
            <div class="stat-label">Total de Registros</div>
        </div>
        <div class="stat-card">
            <div class="stat-number" id="total-challenges">-</div>
            <div class="stat-label">Desafíos Activos</div>
        </div>
        <div class="stat-card">
            <div class="stat-number" id="registrations-today">-</div>
            <div class="stat-label">Registros Hoy</div>
        </div>
        <div class="stat-card">
            <div class="stat-number" id="registrations-week">-</div>
            <div class="stat-label">Registros Esta Semana</div>
        </div>
    </div>

    <div class="registrations-table">
        <div class="table-header">
            <h3><i class="fa-solid fa-users"></i> Registros de Participantes</h3>
            <div class="filters">
                <select id="filter-challenge" class="form-control">
                    <option value="">Todos los desafíos</option>
                </select>
                <select id="filter-type" class="form-control">
                    <option value="">Todos los tipos</option>
                    <option value="estudiante">Estudiante</option>
                    <option value="profesional">Profesional / Tecnólogo</option>
                    <option value="osc">OSC</option>
                    <option value="ciudadano">Ciudadano/a</option>
                    <option value="otro">Otro</option>
                </select>
                <input type="text" id="search-input" class="form-control" placeholder="Buscar por nombre o email...">
            </div>
        </div>

        <div id="loading" class="loading">
            <i class="fa-solid fa-spinner fa-spin fa-3x"></i>
            <p>Cargando registros...</p>
        </div>

        <div id="table-container" style="display:none; overflow-x: auto;">
            <table>
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Teléfono</th>
                        <th>Tipo</th>
                        <th>Ubicación</th>
                        <th>Desafío</th>
                        <th>Organización</th>
                    </tr>
                </thead>
                <tbody id="registrations-tbody">
                </tbody>
            </table>
        </div>

        <div id="no-data" style="display:none; text-align: center; padding: 50px;">
            <i class="fa-solid fa-inbox fa-3x" style="color: #ccc;"></i>
            <p style="color: #666; margin-top: 20px;">No hay registros disponibles</p>
        </div>
    </div>
</div>
{% endblock %}

{% block body_javascripts %}
<script type="module">
    import { supabase } from '/assets/js/supabase-client.js';

    let allRegistrations = [];

    async function loadRegistrations() {
        try {
            const { data, error } = await supabase
                .from('challenge_registrations')
                .select('*')
                .order('created_at', { ascending: false });

            if (error) throw error;

            allRegistrations = data || [];
            updateStats(allRegistrations);
            populateFilters(allRegistrations);
            displayRegistrations(allRegistrations);

            document.getElementById('loading').style.display = 'none';

            if (allRegistrations.length > 0) {
                document.getElementById('table-container').style.display = 'block';
            } else {
                document.getElementById('no-data').style.display = 'block';
            }
        } catch (error) {
            console.error('Error loading registrations:', error);
            document.getElementById('loading').innerHTML = '<p style="color: red;">Error al cargar los registros</p>';
        }
    }

    function updateStats(registrations) {
        const today = new Date();
        today.setHours(0, 0, 0, 0);

        const weekAgo = new Date();
        weekAgo.setDate(weekAgo.getDate() - 7);
        weekAgo.setHours(0, 0, 0, 0);

        const registrationsToday = registrations.filter(r =>
            new Date(r.created_at) >= today
        ).length;

        const registrationsWeek = registrations.filter(r =>
            new Date(r.created_at) >= weekAgo
        ).length;

        const challenges = [...new Set(registrations.map(r => r.challenge_name))];

        document.getElementById('total-registrations').textContent = registrations.length;
        document.getElementById('total-challenges').textContent = challenges.length;
        document.getElementById('registrations-today').textContent = registrationsToday;
        document.getElementById('registrations-week').textContent = registrationsWeek;
    }

    function populateFilters(registrations) {
        const challenges = [...new Set(registrations.map(r => r.challenge_name))];
        const filterChallengeSelect = document.getElementById('filter-challenge');

        challenges.forEach(challenge => {
            const option = document.createElement('option');
            option.value = challenge;
            option.textContent = challenge;
            filterChallengeSelect.appendChild(option);
        });
    }

    function escapeHtml(str) {
        if (!str) return '-';
        const div = document.createElement('div');
        div.textContent = String(str);
        return div.innerHTML;
    }

    function displayRegistrations(registrations) {
        const tbody = document.getElementById('registrations-tbody');
        tbody.innerHTML = '';

        registrations.forEach(reg => {
            const row = document.createElement('tr');
            const date = new Date(reg.created_at).toLocaleDateString('es-GT');

            row.innerHTML = `
                <td>${escapeHtml(date)}</td>
                <td><strong>${escapeHtml(reg.name)}</strong></td>
                <td>${escapeHtml(reg.email)}</td>
                <td>${escapeHtml(reg.phone)}</td>
                <td><span class="badge badge-primary">${escapeHtml(reg.participant_type)}</span></td>
                <td>${escapeHtml(reg.location)}</td>
                <td>${escapeHtml(reg.challenge_name)}</td>
                <td>${escapeHtml(reg.organization)}</td>
            `;
            tbody.appendChild(row);
        });
    }

    function filterRegistrations() {
        const challengeFilter = document.getElementById('filter-challenge').value;
        const typeFilter = document.getElementById('filter-type').value;
        const searchQuery = document.getElementById('search-input').value.toLowerCase();

        const filtered = allRegistrations.filter(reg => {
            const matchesChallenge = !challengeFilter || reg.challenge_name === challengeFilter;
            const matchesType = !typeFilter || reg.participant_type === typeFilter;
            const matchesSearch = !searchQuery ||
                reg.name.toLowerCase().includes(searchQuery) ||
                reg.email.toLowerCase().includes(searchQuery);

            return matchesChallenge && matchesType && matchesSearch;
        });

        displayRegistrations(filtered);
    }

    document.getElementById('filter-challenge').addEventListener('change', filterRegistrations);
    document.getElementById('filter-type').addEventListener('change', filterRegistrations);
    document.getElementById('search-input').addEventListener('input', filterRegistrations);

    loadRegistrations();
</script>
{% endblock %}
