{% extends "src/base.njk" %}

{% block head %}
<title>{{ title }}</title>
{% endblock %}

{% block content %}

    <!-- Info Section -->
    <div class="container">
        <div class="row my-ct bg-white-ct">
            <div class="col-md-4 my-2">
                <img class="w-100" src="{{image}}">
            </div>
            <div class="col-md-8 my-2" style="padding: 0 5%;">
                <h2>{{title}}</h2>
                <p>{{description | rmj |safe}}</p>
                <div class="d-flex-ct">
                    <a href="{{liink}}" class="btn btn-primary" style="margin-right: 20px;">Descarga los Detalles</a>
                    <a href="{{liink}}" class="btn btn-primary">Participa</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Objetivos Section -->
    <div class="container px-0">
        <div class="row my-ct2 ">
            <div class="col-lg-6 my-2">
                <div class="bg-white-ct h-100">
                    <div class="d-flex align-items-center">
                        <img class="ic-desafio" src="/assets/img/iconos/DC_iconos-02.png">
                        <h3>Objetivos</h3>
                    </div>
                    {{objetivos | rmj | safe}}
                </div>
            </div>

            <div class="col-lg-6 my-2">
                <div class="bg-white-ct h-100">
                    <div class="d-flex align-items-center">
                        <img class="ic-desafio" src="/assets/img/iconos/DC_iconos-03.png">
                        <h3>Premio</h3>
                    </div>
                    <p>{{premio}}</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Criterios Section -->
    <div class="container ">
        <div class="row my-ct2 bg-white-ct">
            <div class="col-lg-12">
                <div class="bg-white-ct">
                    <div class="d-flex align-items-center">
                        <img class="ic-desafio" src="/assets/img/iconos/DC_iconos-01.png">
                        <h3>Criterios de Evaluaci√≥n</h3>
